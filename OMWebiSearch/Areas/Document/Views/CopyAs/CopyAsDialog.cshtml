@{
	Layout = null;
}

<div id="copy-as-dialog" class="modalDialog pop-up-dialog" keyboard-navigation keyboard-save="ok()" keyboard-cancel="close()">
	<div>

		<div class="dialogTitlebar">
			<h2>@ViewBag.Title</h2>
			<a id="closeX" tabindex="0" title="Close" class="close" ng-click="close()"></a>
		</div>
		
		<div id="loading" ng-if="showLoadingAnimation" style="display:block;">
			<div class="imageHolder"></div>
		</div>

		<div class="pop-up-body" ng-if="!showLoadingAnimation">
			<div class="pop-up-dialog-table edit-list-field-value-table">
				<div id="editListFieldGrid" class="grid"
				     ui-grid="gridOptions" ui-grid-selection ui-grid-row-navigation></div>
			</div>
		</div>

		<div ng-if="!showLoadingAnimation">
			<div class="popup-footer">
				
				<span class="popup-error-message">{{errorMessage}}</span>

				<button id="btnSave"
				        ng-click="ok()"
				        tab-order="1"
				        class="toolbarButton toolbarCustomButton">
					<img class="iconBox" src="~/Content/Images/dialog_ok.png" />
					<span class="buttonText">{{saveOnClose ? "OK" : "Close"}}</span>
				</button>
			</div>
			<div class="clear-fix"></div>
		</div>
	</div>
</div>

